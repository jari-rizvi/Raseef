<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_63sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/item_background"
        android:layout_marginStart="@dimen/_5sdp"
        android:orientation="horizontal">

        <CheckedTextView
            android:id="@+id/checkedTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:checked="false"
            android:background="@drawable/checked_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <CheckedTextView
            android:id="@+id/categoryName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:checked="false"
            android:elevation="@dimen/_4sdp"
            android:gravity="center"
            android:text="Resturant"
            app:layout_constraintBottom_toTopOf="@+id/checkedTextView"
            app:layout_constraintEnd_toStartOf="@+id/checkedTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>